#include <iostream>
using namespace std;

void percobaanArray1D() {
    int a[5];      
    int choice;
    bool running = true;

    for (int i = 0; i < 5; i++) {
        a[i] = 0;
    }

    while (running) {
        cout << "\n=== MENU ARRAY 1D ===\n";
        cout << "1. Tampilkan address array\n";
        cout << "2. Tampilkan address semua index\n";
        cout << "3. Masukkan nilai ke array\n";
        cout << "4. Tampilkan isi array\n";
        cout << "5. Keluar\n";
        cout << "Pilih menu: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "Address array (alamat elemen pertama): " << &a << endl;
            break;

        case 2:
            cout << "Address tiap elemen array:\n";
            for (int i = 0; i < 5; i++) {
                cout << "Index ke-" << i << " => " << &a[i] << endl;
            }
            break;

        case 3:
            cout << "Masukkan 5 nilai array:\n";
            for (int i = 0; i < 5; i++) {
                cout << "Index ke-" << i << " : ";
                cin >> a[i];
            }
            break;

        case 4:o
            cout << "Isi array saat ini: [ ";
            for (int i = 0; i < 5; i++) {
                cout << a[i] << " ";
            }
            cout << "]" << endl;
            break;

        case 5:
            cout << "Keluar dari percobaan Array 1D...\n";
            running = false;
            break;

        default:
            cout << "Pilihan tidak valid! Coba lagi.\n";
        }
    }
}

int main() {
    percobaanArray1D(); 
    return 0;
}
